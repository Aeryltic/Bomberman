Logs::Logs() : indent(0) {
    //ctor
}

Logs::~Logs() {
    //dtor
}

void Logs::open(string format, Args... args){
    log(format, args);
    indent++;
}
void Logs::log(string format, Args... args){
    for(int i=0; i < indent; i++){
        format = "  " + format;
    }
    printf(format.c_str(), args);
}

